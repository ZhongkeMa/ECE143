class Solution:
    def reverse(self, x):
        """
        :type x: int
        :rtype: int
        """
        if x>=0:
            sign=1
        else:
            sign=-1
            
        reversedNumber=self.reverseNumber(abs(x))
        
        if reversedNumber>(2**31-1):
            return 0
        else:
            return sign*reversedNumber
        
        
    def reverseNumber(self,x):
        num=x
        reversedNumber=0
        while num:
            reversedNumber=10*reversedNumber+num%10
            num=num//10
        
        return reversedNumber