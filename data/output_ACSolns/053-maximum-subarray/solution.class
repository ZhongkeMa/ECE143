class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        int n = nums.size();
        //vector<int> dp(n,0);
        //dp[0] = nums[0];
        int sum = INT_MIN;
        int curr = 0;
        for(int i=0; i<nums.size(); i++) {
            //dp[i] = max(dp[i-1] + nums[i]
            curr = curr + nums[i];
            sum = max(sum, curr);
            if(curr < 0)
                curr = 0;
            //cout << i << " " << dp[i] << endl;
        }
        return sum;
    }
};